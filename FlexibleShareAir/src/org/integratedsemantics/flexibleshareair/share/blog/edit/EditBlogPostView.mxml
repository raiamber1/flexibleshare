<?xml version="1.0" encoding="utf-8"?>
<edit:EditBlogPostViewBase xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns:edit="org.integratedsemantics.flexibleshareair.share.blog.edit.*"
    width="750" height="600" title="Edit Blog Post" styleName="dialog" showCloseButton="true">

    <mx:Style source="edit.css"/>
    
    <mx:Form styleName="mainArea">
        <mx:FormItem label= "Title:"  width="400"  styleName="mainArea">
            <mx:TextInput id="titleTextInput" width="250" text="" styleName="input"/>
        </mx:FormItem>
    </mx:Form>
    
    <mx:HTML id="htmlControl" width="703" height="406" styleName="input"/>
    
    <mx:Spacer height="20"/>
                  
    <mx:HBox width="100%" styleName="buttonArea"> 
        <mx:Button id="okBtn" label="Update"/> 
        <mx:Spacer width="20"/>
        <mx:Button id="publishBtn" label="Publish Internally" enabled="false"/> 
        <mx:Spacer width="20"/>
        <mx:Button id="publishExternallyBtn" label="Update Internally and Publish Externally" enabled="false"/> 
        <mx:Spacer width="20"/>
        <mx:Button id="cancelBtn" label="Cancel"/>
    </mx:HBox> 
    
</edit:EditBlogPostViewBase>
